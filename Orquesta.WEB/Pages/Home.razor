@page "/"
@using Microsoft.AspNetCore.Components.Authorization
@using Orquesta.Shared.Entities
@using Orquesta.WEB.Repositories
@using Orquesta.WEB.Shared
@inject IRepository repository
@inject SweetAlertService sweetAlertService
@inject NavigationManager navigationManager


 <style>
    /* Contenedor de título e imagen */
    .title-and-image-container {
        text-align: center;
        color: white;
        font-family: 'Brush Script MT', cursive;
    }

    /* Estilo de título y logo */
    .title-and-image-container h1 {
        font-size: 80px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .title-and-image-container h1 img {
        margin-right: 20px;
    }

    /* Imagen de fondo */
    .scrollable-image {
        width: 100%;
        height: 400px;
        object-fit: cover;
    }

    /* Sección de información principal */
    .text {
        background-color: #000;
        padding: 50px;
        text-align: center;
    }

    /* Sección "¿Quiénes somos?" */
    .about-section {
        background-color: #F36;
        color: white;
        padding: 50px 20px;
        text-align: center;
    }

    .about-section h2 {
        text-transform: uppercase;
    }

    .about-section p {
        max-width: 600px;
        margin: 0 auto;
    }


    .social-icons i {
        font-size: 24px;
        margin: 0 10px;
        color: black;
    }



    /* ---------------------------- */
    .image-container {
        position: relative;
        width: 300px;
        height: 300px;
    }

    .content-inline {
        width: 35%;
        position: absolute;
        left: 60%;
        top: 30%;
        transform: translate(-50%, -50%);
        display: inline-block;
    }

    .search-inline {
        width: 100%;
        position: relative;
        display: flex;
    }

    .search-inline--input {
        width: 100%;
        padding: 10px 10px 10px 40px; /* Espacio para el icono */
        border: 1px solid #222222;
        border-radius: 20px;
        outline: none;
        color: #222222;
        font-size: 20px;
    }

    .my-button {
        padding: 10px 60px;
        background-color: aliceblue;
        color: black;
        font-family: 'Sans-serif';
        border: none;
        border-radius: 20px;
        cursor: pointer;
        z-index: 100;
        text-decoration: none;
    }

        .my-button:hover {
            background-color: antiquewhite;
        }

    h3{
        color: white;
        font-family: 'Sans-serif';
        z-index:100;
    }

    .search-icon {
        position: absolute;
        left: 10px;
        top: 20%;
        font-size: 1.2em;
        color: #222222;
    }

    .scrollable-image {
        width: 100%;
        height: 300px;
        object-fit: cover;
        display: block;      
    }


</style>

<div class="title-and-image-container">
    <div>
            <AuthorizeView Roles="Admin, UserContratante">
                <Authorized>
                    <!-- Barra de búsqueda -->
                    <div class="content-inline">
                        @*<div class="search-inline">
                        <input name="txtSearch" class="search-inline--input" placeholder="Buscar">
                        <i class="bi bi-search search-icon"></i>
                        </div>*@
                        <h3>¡ENCUENTRA TU ORQUESTA IDEAL!</h3>
                    <a href="listabusqueda" class="my-button">Clic aquí!</a>
                    </div>
        </Authorized>
        </AuthorizeView>

        <!-- Imagen -->
        <img class="scrollable-image" src="https://images.unsplash.com/photo-1527606432722-8b1422ce77a1?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt="OrquesYa" width="300" height="300">
    </div>
<div class="text">
    <h1>
        <img src="https://i.ibb.co/F4xgfcH/Logotipo-de-Banda-en-Negro-Naranja-y-Beis-con-L-neas.png" alt="OrquesYa" width="300" height="300">
        MelodyMatch!
    </h1>
</div>
</div>






