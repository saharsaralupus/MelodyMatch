@page "/agrupacion/create"
@inject IRepository repository
@inject NavigationManager navigationManager
@inject SweetAlertService sweetAlertService


<h3>Crear</h3>
<AgrupacionSolistaForm @ref="agrupacionSolistaForm" AgrupacionSolista="agrupacionSolista" OnSubmit="Create" ReturnAction="Return" />

@code {
    private Agrupacion agrupacionSolista = new Agrupacion();
    private AgrupacionSolistaForm agrupacionSolistaForm;



    private async Task Create()
    {


        var responseHttp = await repository.PostAsync("/api/agrupacion", agrupacionSolista);
        if (responseHttp.Error)
        {

            var message = await responseHttp.GetErrorMessageAsync();
            await sweetAlertService.FireAsync("Error", message);
            return;


        }

        Return();

        var toast = sweetAlertService.Mixin(new SweetAlertOptions
            {

                Toast = true,
                Position = SweetAlertPosition.BottomEnd,
                ShowConfirmButton = true,
                Timer = 3000

            });


        await toast.FireAsync(icon: SweetAlertIcon.Success, message: "Registro creado con éxito");
    }


    private void Return()
    {




        agrupacionSolistaForm!.FormPostedSuccessfully = true;
        navigationManager.NavigateTo("/agrupacion");




    }


}